<h1>Update Persons Information</h1>

<%= form_for @people do |f| %>
  <%= f.label :name %>
  <%= f.update :name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :hair_color %>
  <%= f.text_area :hair_color %>

  <%= f.label :eye_color %>
  <%= f.text_area :eye_color %>

  <%= f.label :gender %>
  <%= f.text_area :gender %>

  <%= f.submit %>
<% end %>

